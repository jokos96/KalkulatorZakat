<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pmobile.kalkulatorzakat.MainActivity">


    <ScrollView
        android:layout_width="365dp"
        android:layout_height="327dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/imgHome"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnFitrah"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:srcCompat="@drawable/fitrah"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="193dp" />

            <ImageButton
                android:id="@+id/btnProfesi"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:srcCompat="@drawable/profesi"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="193dp" />

            <ImageButton
                android:id="@+id/btnMal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:srcCompat="@drawable/maal"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="193dp" />

            <ImageButton
                android:id="@+id/btnAbout"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                app:srcCompat="@drawable/about"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="193dp" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imgHome"
        android:layout_width="388dp"
        android:layout_height="167dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/home2"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home2"
        tools:layout_editor_absoluteX="-4dp"
        app:layout_constraintHorizontal_bias="0.428" />

</android.support.constraint.ConstraintLayout>
